
<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
	<b>User:</b>
		<%= link_to @post.user.name, @post.user %>
</p>


<p>
  <b>Post:</b>
  <%= @post.post %>
</p>


<p>
  <b>Link:</b>
  
  <a href="<%=@post.link%>" target="_blank"><%=  @post.link %> </a>
</p>

<p>
  <b>Likes</b>
  <%= link_to @post.likes, @post, method: :like %>
  
</p>


<!DOCTYPE html>
<html>
<head>
  <title>Journal</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">

<% if user_signed_in? %>
<%= link_to 'Logout',
destroy_user_session_path,
method:  :delete %>
<%end%>



	<% if alert %>
    <div class="alert alert-error">
      <%= alert %>
    </div>
  <% end %>
  <% if notice %>
    <div class="notice notice-error">
      <%= notice %>
    </div>
  <% end %>

	<%= yield %>
</div>
</body>
</html>
